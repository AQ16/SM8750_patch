@@ -0,0 +1,10 @@
+#include <linux/init.h>
+#include <linux/of.h>
+
+static int __init hmbird_patch(void) {
+    struct device_node *np = of_find_node_by_path("/soc/oplus,hmbird/version_type");
+    return (np && of_property_write_string(np, "type", "HMBIRD_GKI") == 0) ? 0 : -ENODEV;
+}
+early_initcall(hmbird_patch);
+
+MODULE_LICENSE("GPL");
+MODULE_DESCRIPTION("Force HMBIRD_OGKI to GKI converter");
